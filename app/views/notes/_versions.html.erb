
<div style="width:500px; margin:auto">

<h4>Previous Versions</h4>

<table style="width:400px; margin:auto" cellspacing="0"  class="table table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>Date</th>   
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%- @note.versions.reverse.each do |version| %>
      <tr>
        <td><%= version.created_at %></td>        
        <td><%= link_to 'Rollback', rollback_note_version_path(@note, version), method: 'PATCH'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>